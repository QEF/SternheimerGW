[SternheimerGW]
exe = ./run-gw.sh
extract_program = ./extract-gw.sh
input_args = ('*.in', '')
run_cmd_template = tc.program tc.input tc.output tc.error
tolerance = ( (1.0e-6, 5.0e-3, 'e1'),
              (3.0e+0, 5.0e-1, 'n1'),
              (1.0e-3, 1.0e-5, 'f1'),
              (1.0e-1, 1.0e-3, 'p1'),
              (1.0e-2, 3.0e-3, 'eps'),
              (1.0e-1, None, 'spec'),
              (2.0e-2, None, 'dft_eval'),
              (5.0e-2, None, 'gw_eval'),
              (5.0e-2, None, 'vxc_exp'),
              (5.0e-2, None, 'sigma_x'),
              (3.0e-2, None, 'z_factor'),
              (5.0e-2, 1.0e-3, 'coul'),
            )
skip_program = grep
skip_args = 'not present in this version'

[user]
benchmark = v0.14 v0.13 v0.12 v0.11
date_fmt = %d%m%y
diff = vimdiff

